@model Funcionario

@{
    ViewData["Title"] = "Create";
}
<head>

    <link rel="stylesheet" href="~/css/Funcionario.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<header>
    <link rel="stylesheet" href="~/css/Header.css" asp-append-version="true" />
    <div class="header">
        <div class="usuario-funcao">Administradora</div>
        <div class="usuario">Letícia Cardoso</div>
        <div class="usuario-email">leticia@avanacle.com</div>
        <img src="~/images/icones/profile-2.svg" class="icone-usuario" />
        <img src="~/images/avanacle-logo.png" class="avanacle-logo" />
    </div>
</header>
<body>

    <div class="container">

        <aside class="sidebar">
            <nav class="nav-nav">
                <div class="ola">Olá, Administrador!</div>
                <ul class="container-nav nav nav-pills flex-column mt-2">
                    <li class="nav-item-lista">
                        <a href="#" class="text-secondary text-decoration-none">
                            <i class="nav-bi bi-clock"></i>Lançamento de horas
                        </a>
                    </li>
                    <li class="nav-item-lista">
                        <a asp-area="Admin" asp-controller="Funcionario" asp-action="Index" class="text-secondary text-decoration-none">
                            <i class="nav-bi bi-person"></i>Gerenciar funcionários
                        </a>
                    </li>
                    <li class="nav-item-lista">
                        <a asp-area="Admin" asp-controller="Departamento" asp-action="Index" class="text-secondary text-decoration-none">
                            <i class="nav-bi bi-folder"></i>Gerenciar departamentos
                        </a>
                    </li>
                    <li class="nav-item-lista">
                        <a asp-area="Admin" asp-controller="WBS" asp-action="Index" class="text-secondary text-decoration-none">
                            <i class="nav-bi bi-gear"></i>Gerenciar WBS
                        </a>
                    </li>
                </ul>
            </nav>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                <button type="submit" class="logout">Sair</button>
            </form>
        </aside>
        <main class="main-content">
            <section class="content">
                <div class="form-container">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Funcionario_NomeCompleto" class="control-label">Nome Completo</label>
                            <input asp-for="Funcionario_NomeCompleto" class="form-control" />
                            <span asp-validation-for="Funcionario_NomeCompleto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Funcionario_Email" class="control-label">Email</label>
                            <input asp-for="Funcionario_Email" class="form-control" />
                            <span asp-validation-for="Funcionario_Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Funcionario_DataContratacao" class="control-label">Data de Contratação</label>
                            <input asp-for="Funcionario_DataContratacao" class="form-control" />
                            <span asp-validation-for="Funcionario_DataContratacao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Departamento_ID" class="control-label">ID Departamento</label>
                            <input asp-for="Departamento_ID" class="form-control" />
                            <span asp-validation-for="Departamento_ID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="save" />
                        </div>
                    </form>
                </div>
            </section>
        </main>
    </div>

</body>

